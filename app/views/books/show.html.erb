<div>
  <%= flash[:notice] %>
</div>

<%= render 'users/info', user: @user %>

<h1>Book detail</h1>

<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user.id) do %>
          <%= @book.user.name %>
        <% end %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td>
        <%= link_to 'Edit', edit_book_path(@book) %>
      </td>
      <td>
        <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に本当に消しますか？'} %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>